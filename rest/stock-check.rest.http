### Test Orders Service - HTTP Stock Checking

# Create order using HTTP stock checking (should succeed)
POST http://localhost:3001/orders/create-http
Content-Type: application/json

{
  "customerId": "CUST001",
  "items": [
    {"productId": "PROD001", "qty": 2, "price": 999.99},
    {"productId": "PROD002", "qty": 1, "price": 799.99}
  ]
}

###

# Create order using HTTP stock checking (should fail - out of stock)
POST http://localhost:3001/orders/create-http
Content-Type: application/json

{
  "customerId": "CUST002", 
  "items": [
    {"productId": "PROD007", "qty": 1, "price": 1299.99}
  ]
}

###

### Test Orders Service - TCP Stock Checking

# Create order using TCP stock checking (should succeed)
POST http://localhost:3001/orders/create-tcp
Content-Type: application/json

{
  "customerId": "CUST003",
  "items": [
    {"productId": "PROD003", "qty": 2, "price": 1499.99},
    {"productId": "PROD004", "qty": 1, "price": 299.99}
  ]
}

###

# Create order using TCP stock checking (should fail - insufficient stock)
POST http://localhost:3001/orders/create-tcp
Content-Type: application/json

{
  "customerId": "CUST004",
  "items": [
    {"productId": "PROD006", "qty": 10, "price": 49.99}
  ]
}

